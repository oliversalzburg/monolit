// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "typecheck:all",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$ts-webpack-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/packages/monolit"
      }
    },
    {
      "label": "Hello world",
      "type": "shell",
      "command": "echo",
      "args": [
        "Hello",
        "World",
        "$PWD"
      ],
      "options": {
        "cwd": "${workspaceFolder}/packages/*"
      }
    }
  ]
}
