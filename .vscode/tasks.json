// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run type check",
      "type": "shell",
      "command": "npm typecheck:all",
      "problemMatcher": [
        "$tsc"
      ],
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "npm watch",
      "problemMatcher": "$ts-webpack-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/packages/monolit"
      }
    }
  ]
}
