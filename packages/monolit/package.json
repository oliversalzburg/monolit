{
  "name": "monolit",
  "displayName": "MonoLit",
  "description": "Dynamic launch system for VS Code",
  "icon": "icon.png",
  "version": "0.0.11",
  "publisher": "OliverSalzburg",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliversalzburg/monolit.git",
    "directory": "/packages/monolit"
  },
  "license": "UNLICENSED",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "monolit.build",
        "title": "MonoLit: Build"
      },
      {
        "command": "monolit.refreshTasks",
        "title": "MonoLit: Refresh tasks"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "package": "run vsce package --yarn",
    "publish": "run vsce publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "glob": "^7.1.6",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.2",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.1",
    "webpack": "^5.10.3",
    "webpack-cli": "^4.2.0"
  }
}
