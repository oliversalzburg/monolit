{
	"name": "build-manager",
	"displayName": "Build Manager",
	"description": "Builds in VS Code, except they don't suck.",
	"version": "0.0.1",
	"license": "UNLICENSED",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:build-manager.build",
		"workspaceContains:yarn.lock"
	],
	"contributes": {
		"commands": [
			{
				"command": "build-manager.build",
				"title": "Build"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"prettier": "2.2.1",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
