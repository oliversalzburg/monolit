{
  "name": "root",
  "version": "latest",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliversalzburg/monolit.git"
  },
  "license": "MIT",
  "author": {
    "name": "Oliver Salzburg",
    "email": "oliver.salzburg@gmail.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "docs:scripts:build": "nsd --docs-location \"packages/documentation/docs/reference/Repository Scripts/\"",
    "docs:scripts:check": "nsd --docs-location \"packages/documentation/docs/reference/Repository Scripts/\" --check-only",
    "extension:clean": "cd packages/monolit && rm -rf dist",
    "extension:package": "cd packages/monolit && yarn package",
    "extension:publish": "cd packages/monolit && yarn publish",
    "typecheck:all": "tsc --noEmit --incremental false"
  },
  "devDependencies": {
    "@types/mocha": "9.1.1",
    "@types/prettier-package-json": "2.1.1",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "@yarnpkg/sdks": "2.6.0",
    "eslint": "8.14.0",
    "lint-staged": "12.4.0",
    "mocha": "9.2.2",
    "node-scripts-docs": "0.0.9",
    "prettier": "2.6.2",
    "prettier-package-json": "2.6.3",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-sh": "0.10.1",
    "typescript": "4.5.5"
  }
}
